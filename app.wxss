/* 标题与内容的样式 */
.title{
  box-sizing:border-box;
  height: 100rpx;
  width:100%;
  background-color:#FAFAFA;
  font-size: 50rpx;
  line-height:100rpx;
  padding-left:50rpx;
  font-weight:300;
}
.littletitle{
  box-sizing:border-box;
  height: 60rpx;
  background-color:#FAFAFA;
  font-size: 35rpx;
  line-height:60rpx;
  padding-left:60rpx;
  padding-right:50rpx;
  font-weight:300;
}
.note{
  box-sizing:border-box;
  background-color:#FAFAFA;
  font-size: 30rpx;
  line-height:50rpx;
  padding-left:70rpx;
  padding-right:50rpx;
  font-weight:300;
}
/* 小黑板 */
.notice-box{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width:100%;
}
.notice{
  box-sizing: border-box;
  padding:30rpx;
  width:90%;
  background:rgb(23, 90, 81);
  border:20rpx solid rgb(102, 10, 10);
  color:white;
  font-size:35rpx;
  border-radius:10rpx;
}
/* 模块之间的间隙 */
.blank{
  height:150rpx;
}
.littleblank{
  height:70rpx;
}

/* 脑图 */
.brainbox{
  box-sizing: border-box;
  height:max-content;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:flex-start;
  background:white;
}
.brainroot{
  box-sizing: border-box;
  padding-right:30rpx;
  height:40rpx;
  width:200rpx;
  font-size: 30rpx;
  line-height:40rpx;
  padding-left:30rpx;
  font-weight:300;
}
.brainitembox{
  height:max-content;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-left:10rpx solid greenyellow;
}
.brainitem{
  height:40rpx;
  box-sizing:border-box;
  font-size: 30rpx;
  line-height:40rpx;
  padding-left:30rpx;
  font-weight:300;
  margin:10rpx 0 10rpx 0;
}